@model IEnumerable<Music.Contexto.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header page-header-loja">
    <h1 class="titulo-h1">Listagem de Album</h1>
</div>


    @Html.ActionLink("Novo Album", "Adicionar",null,new{ @class = "btn btn-success" })


<table class="table table-responsive">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AlbumId)</th>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    <a class="btn btn-default btn-xs" href="/Album/Editar/@item.AlbumId"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                    <a class="btn btn-danger btn-xs" onclick="Deletar(@item.AlbumId)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                  
                </td>
            </tr>
        }

    </tbody>
</table>



@section ScriptPage{

    <script src="~/Scripts/js/main.js"></script>
     <script src="~/Scripts/js/jsalbum.js"></script>

}




