@model IEnumerable<Music.Contexto.Artista>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header page-header-loja">
    <h1 class="titulo-h1">Listgagem de Artistas</h1>
</div>

@Html.ActionLink("Novo Artista", "Adicionar", null, new { @class = "btn btn-success" })

<section class="secao-artista">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ArtistaId)</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtistaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>

                        <a class="btn btn-default btn-xs" href="/Artista/Editar/@item.ArtistaId"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                        <a class="btn btn-danger btn-xs" onclick="Deletar(@item.ArtistaId)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        
                    </td>
                </tr>
            }

        </tbody>
    </table>

</section>

@section ScriptPage{

    <script src="~/Scripts/js/main.js"></script>
<script src="~/Scripts/js/jsartista.js"></script>

}


